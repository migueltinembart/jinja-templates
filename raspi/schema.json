{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/migueltinembart/jinja-templates/main/raspi/schema.json",
    "type": "object",
    "properties": {
        "user-data": {
            "type": "object",
            "properties": {
                "hostname": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "packages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "public_keys": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "passwordless_sudo": {
                    "type": "boolean"
                },
                "timezone": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "hostname",
                "username",
                "packages",
                "public_keys",
                "passwordless_sudo",
                "timezone"
            ]
        },
        "network-config": {
            "type": "object",
            "properties": {
                "ip_address": {
                    "type": "string"
                },
                "gateway": {
                    "type": "string"
                },
                "nameservers": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "search": {
                    "type": "string"
                }
            },
            "required": [
                "ip_address",
                "gateway",
                "nameservers",
                "search"
            ]
        }
    },
    "required": [
        "user-data",
        "network-config"
    ]
}